---
import { Icon } from "astro-icon/components";

interface Props {
	title?: string;
	description?: string;
	primaryCTA?: {
		text: string;
		href: string;
		icon?: string;
	};
	secondaryCTA?: {
		text: string;
		href: string;
		icon?: string;
	};
}

const {
	title = "Get Started with SurrealDB",
	description = "Build modern applications with the power of SQL, NoSQL, and Graph databases combined. SurrealDB simplifies your data layer with unmatched flexibility and performance.",
	primaryCTA = {
		text: "Get Started with SurrealDB",
		href: "https://app.surrealdb.com",
		icon: "fa6-solid:rocket",
	},
	secondaryCTA = {
		text: "Download SurrealDB",
		href: "/install",
		icon: "fa6-solid:download",
	},
} = Astro.props;
---

<div class="mt-16 p-8 bg-background-secondary border-t border-border shadow-lg">
	<div
		class="w-full mx-auto px-4 sm:px-8 box-border max-w-[960px]"
	>
		<h1 class="!text-4xl md:!text-xl !mb-2 !leading-tight">
			{title}
		</h1>
		<p class="!text-md !text-faint !mb-6 lg:!max-w-[50ch] !leading-tight">
			{description}
		</p>
		<div class="flex flex-col sm:flex-row gap-4 items-center">
			<a href={primaryCTA.href} class="!text-white gradient-button group">
				{primaryCTA.text}
				<Icon name={primaryCTA.icon} class="w-4" />
			</a>
			<a
				href={secondaryCTA.href}
				class="outline-button !text-bwr group hover:!text-bw hover:!bg-bwr !bg-background-secondary"
			>
				{secondaryCTA.text}
				<Icon name={secondaryCTA.icon} class="w-4" />
			</a>
		</div>
	</div>
</div>

<style>
	@keyframes float {
		0%,
		100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	.animate-float {
		animation: float 6s ease-in-out infinite;
	}
</style>
